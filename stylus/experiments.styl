colourWhite = rgba(255,255,255,0.9)
body
  background #666
  font-family sans-serif
  // background rgba(0,0,0,1)
  // overflow hidden
  margin 0
  padding 0

// canvas
//   border 1px solid #444

.experiments-loader
  position absolute
  background rgba(50,50,50,0.3)
  top 0
  left 0
  width 100%
  height 100%
  transition opacity 0.2s ease-in-out
  &.complete
    opacity 0
  .experiments-loader-graph
    position absolute
    top 50%
    left 40%
    width 20%
    height 10px
    margin-top -8px
    background rgba(0,0,0,0.3)
    border 2px solid rgba(0,0,0,0.4)
    border-radius 4px
    .experiments-loader-graph-bar
      background #eee
      height 10px
      border-radius 2px
      transition width 0.2s ease-out

#progress
  background #fff
  box-shadow 0px 4px 4px 0px rgba(0,0,0,0.5)
  height 10px
  position absolute
  transition width .3s ease-out, height 0.5s ease-in
  width 0
  z-index 100

.exps-buttons
  background colourWhite
  opacity 0
  position absolute
  right 0
  top -20px
  transition top 0.2s ease-in, opacity 0.3s linear
  &.interacted
    top 0
    opacity 1
  .exps-button
    border-bottom 1px solid black
    border-left 1px solid black
    box-sizing border-box
    color black
    cursor pointer
    display inline-block
    float right
    font-size 10px
    height 22px
    padding 4px 6px

.exp
  background colourWhite
  border none
  color black
  line-height 20px
  margin 4px

.exps-info
  background colourWhite
  box-sizing border-box
  height 0%
  left 10%
  opacity 0
  padding 5%
  position absolute
  top -20%
  transition top 0.5s ease-in-out, opacity 0.3s linear, height 0.3s linear
  width 80%
  &.displayed
    display block
    height 80%
    opacity 1
    top 10%
  h1
    color #333
    margin-top 0
  h4
    text-transform uppercase
    martin-top 0
    color #666
  a, a:visited
    color black
  .exps-info-details
    overflow-x hidden
    overflow-y auto
    color black
    height 100%

@media (max-width:900px)
  .exp
    line-height 40px
    font-size 15px

  .exps-buttons
    top -40px
    .exps-button
      font-size 20px
      height 40px
      padding 8px 12px
