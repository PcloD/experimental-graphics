makeTransition(transition)
  -webkit-transition transition
  -moz-transition transition
  -o-transition transition
  transition transition

body
  background #666
  // background #000
  // background rgba(0,0,0,1)
  // overflow hidden
  font-family verdana
  margin 0
  padding 0

// canvas
//   border 1px solid #444

.experiments-loader
  position: absolute
  background rgba(50,50,50,0.3)
  top 0
  left 0
  width 100%
  height 100%
  makeTransition(opacity 0.2s ease-in-out)
  &.complete
    opacity 0
  .experiments-loader-graph
    position absolute
    top 50%
    left 40%
    width 20%
    height 10px
    margin-top -8px
    background rgba(0,0,0,0.3)
    border 2px solid rgba(0,0,0,0.4)
    border-radius 4px
    .experiments-loader-graph-bar
      background #eee
      height 10px
      border-radius 2px
      makeTransition(width 0.2s ease-out)

#progress
  transition width .3s ease
.exp
  line-height 20px
  margin 4px
  background white
  border none
  color #000

  @media (min-width:500px)
    line-height 40px
    font-size 15px

