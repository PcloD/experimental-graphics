body
  overflow hidden
  font-family verdana

.container
  position relative

.preview
  position absolute
  top 50%
  left 50%
  width 200px
  height 200px
  margin-left -100px
  margin-top -100px
  background rgba(0,0,0,0.5)
  border 10px solid black
  border-radius 5px
  color white
  .css
    font-family monospace
    // white-space: pre;

.buttons
  position absolute
  left 20px
  &.top
    top 20px
  &.bottom
    bottom 20px

.button
  background rgba(0,0,0,0.5)
  color white
  border-radius 5px
  border 1px solid rgba(255,255,255,0.7)
  padding 5px
  margin-right 10px
  display inline-block
  cursor pointer
  &:hover
    background rgba(0,0,0,0.8)


.palette
  position absolute
  right 20px
  bottom 20px
  background rgba(0,0,0,0.5)
  color white
  border-radius 5px
  padding 5px
  margin-right 10px
  display inline-block
  cursor pointer

  .colour
    width 100px
    height 50px
    // float left
    text-align center
    font-size 10px
    line-height 50px
    text-shadow 1px 1px 4px #000