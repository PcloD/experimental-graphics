makeTransition(transition)
  -webkit-transition transition
  -moz-transition transition
  -o-transition transition
  transition transition

makeTransform(transform)
  -webkit-transform transform
  -moz-transform transform
  -o-transform transform
  -ms-transform transform
  transform transform

navWidth = 200px
tabSize = 100px
iconWidth = 20px
iconHeight = 16px
iconPadding = 20px

colourGrey = #333
colourBlack = #111
colourWhite = #C7CDEF


@font-face {
  font-family: 'MyWebFont';
  src: url('../font/BlockZone.ttf') format('truetype');
}

body
  background colourBlack
  overflow hidden
  // font-family verdana
  font-family 'MyWebFont', Fallback, sans-serif;


.container
  position relative
  background colourBlack
  color colourGrey

.nav
  float left
  position relative
  color colourWhite
  background colourGrey
  height 100%
  width navWidth
  margin-left navWidth * -1
  makeTransition(margin-left 0.3s ease-in-out)

  .menu
    position absolute
    left 10%
    top 50%
    width 60%
    margin-top 0
    makeTransition(margin-top 0.5s ease-in-out)
    .main
      .option, .sub-option
        box-sizing border-box
        font-size 10px
        height 20px
        line-height 20px
        width 100%
        cursor pointer
        &:hover
          background rgba(255,255,255,0.2)
      .sub-options
        height 0
        overflow hidden
        makeTransition(height 0.3s ease-in-out)
        .sub-option
          padding-left 10px

  .tab
    position absolute
    top 50%
    right 0
    margin-right tabSize * -0.5
    margin-top tabSize * -0.5
    border-radius 50%
    width tabSize
    height tabSize
    background colourGrey
    overflow hidden
    cursor pointer
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    makeTransition(background 0.3s linear)
    &:hover
      .icon
        li
          background colourWhite
    .icon
      position relative
      cursor pointer
      list-style none
      margin 0
      padding 0
      width iconWidth
      height iconHeight
      left tabSize - iconWidth - iconPadding
      top tabSize * 0.5 - iconHeight * 0.5
      makeTransition(all 233ms cubic-bezier(0.5, 0, 0, 1))

      li
        width iconWidth
        height 4px
        background #fff
        margin 2px 0 0
        padding 0
        makeTransform(translate3d(0, 0, 0))
        makeTransition(all 333ms cubic-bezier(0.5, 0, 0, 1))
  &.open
    margin-left 0
    .tab
      background colourBlack
      .icon
        left iconPadding
        li.first
          makeTransform( rotate( -135deg ) translateY( -8.5px ) )
        li.second
          // filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=0);
          opacity 0
        li.third
          makeTransform( rotate( 135deg ) translateY( 8.5px ))


